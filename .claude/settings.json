{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(php:*)",
      "Bash(php artisan:*)",
      "Bash(php -l:*)",
      "Bash(composer install)",
      "Bash(composer update)",
      "Bash(composer require:*)",
      "Bash(composer remove:*)",
      "Bash(composer dump-autoload)",
      "Bash(composer run:*)",
      "Bash(npm install)",
      "Bash(npm run:*)",
      "Bash(npx:*)",
      "Bash(/usr/local/bin/npm run build)",
      "Bash(/opt/homebrew/bin/npm run build)",
      "Bash(export NVM_DIR=\"$HOME/.nvm\")",
      "Bash([ -s \"$NVM_DIR/nvm.sh\" ])",
      "Bash(. \"$NVM_DIR/nvm.sh\")",
      "Bash(git add:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git stash:*)",
      "Bash(git merge:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(tail:*)",
      "Bash(head:*)",
      "Bash(wc:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(which:*)",
      "Bash(env)",
      "Bash(printenv:*)",
      "Bash(./vendor/bin/phpunit:*)",
      "Bash(./vendor/bin/pest:*)",
      "Bash(./vendor/bin/pint:*)",
      "Bash(./vendor/bin/phpstan:*)",
      "Bash(./vendor/bin/php-cs-fixer:*)",
      "Bash(./vendor/bin/sail:*)",
      "Bash(docker ps)",
      "Bash(docker-compose:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./storage/oauth-private.key)",
      "Read(./storage/oauth-public.key)"
    ]
  }
}